<?xml version="1.0" encoding="UTF-8"?>
<ContentView 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="ContactApp.Views.PartialView.Item1">
    
    <StackLayout Padding="20,0,10,0" Orientation="Horizontal" Spacing="10" VerticalOptions="CenterAndExpand">
        <Label Text="{Binding PhoneType}" />
        <Label x:Name="PhoneNumber" Text="{Binding PhoneNumber}" />
        <Image x:Name="ButtonMessage" HeightRequest="30" WidthRequest="30">
        </Image>
        <Image x:Name="ButtonCall" HeightRequest="30" WidthRequest="30">
        </Image>
    </StackLayout>
</ContentView>