<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="ContactApp.Views.PartialView.BelowDetailPage"
    Padding="10,0,10,0">

    <Grid RowSpacing="0" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>    
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0"  Grid.Column="0" Text="Phone:" />
        <Label Grid.Row="1" Grid.Column="0" Text="Mobie" Margin="20,0,0,0"/>
        <ListView Grid.Row="1" Grid.Column="1"></ListView>
        <Image Grid.Row="1" Grid.Column="2" x:Name="ButtonMessage"/>>
       
        <Label Grid.Row="2" Grid.Column="0" Text="Email:" />
        <Label Grid.Row="3" Grid.Column="0" Text="Work" Margin="20,0,0,0"/>
        <ListView Grid.Row="3" Grid.Column="1"></ListView>
    </Grid>
</ContentView>
